{% macro icon(icon, classes) %}
  <i class="mdi mdi-{{icon}}{% if classes %} {{classes}}{% endif %}"></i>
{% endmacro %}

<p>Full list here: <a href="https://materialdesignicons.com">http://https://materialdesignicons.com</a></p>
<div class="icon-list row">
  {% for icons in icons_example.items %}
    <div class="col-md-3">
      <div class="icon-box">
        <div>{{ icon(icons.icon, "color-text-blue") }}</div>
        <span><span class="sr-only">Example of </span>{{ icons.icon }}</span>
      </div>
    </div>
  {% endfor %}
</div>

<style scoped>
  .icon-box {
    width: 100%;
    height: 200px;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .icon-box i {
    font-size: 3rem;
    margin-bottom: 5px;
  }

  .col-md-3 {
    float: left;
  }
</style>
