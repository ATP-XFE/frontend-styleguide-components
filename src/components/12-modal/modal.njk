{% macro modalpassive(type, close, title, description) %}
<h4>Passive modal</h4>
<button type="button" aria-label="Open Navigation" class="open-dialog button button-primary">Open passive modal </button>
 {%- if (type == 'passive') -%}
	<div class="dialog" role="dialog" aria-labelledby="dialog-title" aria-describedby="dialog-description">
		<button type="button" aria-label="Close Navigation" class="close-dialog button button-ghost">{{close}}</button>
		<h3 class="dialog-title" class="font-lead">{{title}}</h3>
		<p class="dialog-description">{{description}}</p>
	</div>
{%- endif %} 
{% endmacro %}

{% macro modaltransactional(type, close, title, description) %}
<h4>Transactional modal</h4>
<button type="button" aria-label="Open Navigation" class="open-dialog button button-primary">Open transactional modal</button>
 {%- if (type == 'transactional') -%}
	<div class="dialog" role="dialog" aria-labelledby="dialog-title" aria-describedby="dialog-description">
		<button type="button" aria-label="Close Navigation" class="close-dialog button button-ghost">{{close}}</button>
		<h3 class="dialog-title" class="font-lead">{{title}}</h3>
		<p class="dialog-description">{{description}}</p>
		<div class="modalbuttons">
			<button class="button button-primary">Primary</button>
			<button class="button button-secondary">Secondary</button>
		</div>
	</div>
{%- endif %} 
{% endmacro %}

	<div class="dialog-overlay" tabindex="-1"></div>

