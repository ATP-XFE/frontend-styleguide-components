{% macro modalpassive(type, close, title, description) %}
<h4>Passive modal</h4>
<button type="button" aria-label="Open Navigation" class="js-open-modal open-modal button button-primary">Open passive </button>
 {%- if (type == 'modal') -%}
	<div class="modal js-modal" role="modal" aria-labelledby="modal-title" aria-describedby="modal-description">
		<button type="button" aria-label="Close Navigation" class="js-close-modal close-modal button button-ghost">{{close}}</button>
		<h3 class="modal-title" class="font-lead">{{title}}</h3>
		<p class="modal-description">{{description}}</p>
	</div>
{%- endif %} 
{% endmacro %}

