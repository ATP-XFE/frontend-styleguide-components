{% from "icons/icons--svg.njk" import icon_svg as icon_svg %}

 {% macro overflowmenu(text, id, openRight, openLeft, icon, contentHTML, doResponsiveCollapse) %}
    <div class="overflow-menu {% if openRight %} overflow-menu--open-right {% endif %}{% if openLeft %} overflow-menu--open-left {% endif %}">
        <button class="button-overflow-menu js-dropdown {% if doResponsiveCollapse %} js-dropdown--responsive-collapse {% endif %}" data-js-target="#{{ id }}" aria-haspopup="true" aria-expanded="false">
            {{ text }}
            {% if icon %}<svg class="icon-svg"><use xlink:href="#{{ icon }}"></use></svg>{% endif %}
            <span class="sr-only">Åbner overflow menu</span>
        </button>
        <div class="overflow-menu-inner" id="{{ id }}" aria-hidden="true">
            {{ contentHTML|safe }}
        </div>
    </div>
{% endmacro %}
<div class="container pt-6">

    <h5 class="h5">Overflow menu</h5>
    {{overflowmenu("Overflow menu","overflow1", true, false, "dots-vertical" ,"
        <ul class='overflow-list'>
            <li><button>Option 1</button></li>
            <li><button>Option 2</button></li>
            <li><a href='#'>Option 3 as link</a></li>
            <li><button>Option 4 is longer text</button></li>
        </ul>
        "
    ) }}
    <div style="padding-bottom: 50px;"></div>

    <h5 class="h5">Overflow menu - åbner til venstre</h5>
    
    <div style="padding-left: 100px;">
        {{overflowmenu("Overflow menu","overflow2", false, true, "dots-vertical" ,"
            <ul class='overflow-list'>
                <li><button>Option 1</button></li>
                <li><button>Option 2</button></li>
                <li><a href='#'>Option 3 as link</a></li>
                <li><button>Option 4 is longer text</button></li>
            </ul>
            "
        ) }}
    </div>
    <div style="padding-bottom: 50px;"></div>

    <h5 class="h5">Overflow menu - trin-guide</h5>
    {{overflowmenu("Trin 3 af 5","overflow3", true, false, "menu-down" ,"
        <ul class='sidenav-list'>
            <li>
                <a href='#'>
                    1. Trin 1
                    <span class='sidenav-icon'>
                        <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                    </span>
                </a>
            </li>
            <li>
                <a href='#'>
                    2. Trin 2
                    <span class='sidenav-icon'>
                        <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                    </span>
                </a>
            </li>
            <li>
                <a href='#' class='active'>
                    3. Trin 3 (valgt)
                </a>
            </li>
            <li>
                <a href='#'>
                    4. Trin 4
                </a>
            </li>
            <li>
                <a href='#'>
                    5. Trin 5
                </a>
            </li>
        </ul>
        ", true
    ) }}

    <div style="padding-bottom: 240px;"></div>
</div>