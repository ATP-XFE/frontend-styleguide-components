{% macro select2(name, id, label, options, multiple) %}
  <label for="{{name}}">{{label}}</label>
  <select class="js-select2" name="{{name}}" id="{{id}}" {% if multiple %}multiple{% endif %}>
    {% for option in options %}
      <option value="{{option.value}}">{{option.text}}</option>
    {% endfor %}
  </select>
{% endmacro %} 

<div class="container" style="min-height: 200px;">
  <form class="form mb-6">
    {{select2(select_multiple_example.name, select_multiple_example.id, select_multiple_example.label, select_multiple_example.options, true)}}
  </form>
</div>