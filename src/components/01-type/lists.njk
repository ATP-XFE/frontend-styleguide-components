{# Unordered list #}
{% macro ul_list(list_ul, subclass) %}
  {% for item in list_ul %}
  <li>
    {{ item.text }}
    {% if item.list_ul %}
    <ul class="{{ subclass }}">
      {{ ul_list(item.list_ul, subclass) }}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
{% endmacro %}

{# Ordered list #}
{% macro ol_list(list_ol, subclass) %}
  {% for item in list_ol %}
  <li>
    {{ item.text }}
    {% if item.list_ol %}
    <ol class="{{ subclass }}">
      {{ ol_list(item.list_ol, subclass) }}
    </ol>
    {% endif %}
  </li>
  {% endfor %}
{% endmacro %}

<div class="row">
  <div class="col-12 col-sm-12 col-md-6 col-lg-6">
    <h4>Unordered paragraph list</h4>

      <ul class="paragraph-list">
        {{ ul_list(lists.list_ul, 'sub_list') }} 
      </ul>

  </div>
  <div class="col-12 col-sm-12 col-md-6 col-lg-6">
    <h4>Ordered paragraph list</h4>

      <ol class="paragraph-list">
        {{ ol_list(lists.list_ol, 'sub_list') }}
      </ol>

  </div>
  <div class="col-12 col-sm-12 col-md-6 col-lg-6">
    <h4>Unordered small list</h4>

      <ul class="small-list">
        {{ ul_list(lists.list_ul, 'sub_list') }}
      </ul>

  </div>
  <div class="col-12 col-sm-12 col-md-6 col-lg-6">
    <h4>Ordered small list</h4>

      <ol class="small-list">
        {{ ol_list(lists.list_ol, 'sub_list') }}
      </ol>

  </div>
</div>

