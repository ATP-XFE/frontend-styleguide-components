{% macro cards(size, cardcontentbefore, header, titlesize, subheader, headercontent, cardcontent, actionbuttons, actionlinks, actionfunctionlinks) %}
<div class="card {{size}}">
  <div class="card-content-before">
      <p>{{cardcontentbefore}}</p>
  </div>
  <div class="card-header">
    <p class="header-title {{titlesize}}">{{header}}</p>
    <p class="subheader">{{subheader}}</p>
    <p class="headercontent">{{headercontent}}</p>
  </div>
  <div class="card-content">
      <p>{{cardcontent}}</p>
  </div>
  <div class="card-action">
    <div class="actionbuttons">
    {{ actionbuttons }}
    </div>
    <div class="actionlinks">
    {{ actionlinks }}
    </div>
    <div class="actionfunctionlinks">
    {{ actionfunctionlinks }}  
    </div>
  </div>
</div>  
{% endmacro %}


