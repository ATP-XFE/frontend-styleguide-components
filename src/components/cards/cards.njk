{% import "02-buttons/buttons.njk" as button %}


{% macro cards(size, cardcontentbefore, header, subheader, headercontent, cardcontent, actioncontent, actionbuttons, actionlinks, actionfunctionlinks) %}
<div class="card {{size}}">
  <div class="card-content-before">
      {{cardcontentbefore}}
  </div>
  <div class="card-header">
    <p class="header-title">{{header}}</p>
    <p class="subheader">{{subheader}}</p>
    <p class="header-content">{{headercontent}}</p>
  </div>
  <div class="card-content">
      {{cardcontent}}
  </div>
  <div class="card-action">
    <div class="action-content">
      {{actioncontent}}
    </div>
    <div class="action-buttons">
    {{ actionbuttons }}
    </div>
    <div class="action-links">
    {{ actionlinks }}
    </div>
    <div class="action-functionlinks">
    {{ actionfunctionlinks }}  
    </div>
  </div>
</div>  
{% endmacro %}


