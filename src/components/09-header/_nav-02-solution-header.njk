{% macro solution_header(solution_header) %}
  <div class="navbar solution-header">
    <div class="solution-heading">
        <a href="{{ solution_header.link.href | default('/') }}"
          title="{{ solution_header.link.title | default('Home') }}"
          aria-label="{{ solution_header.link.label | default('Home') }}">
          {{ solution_header.title | default(site.title) }}
        </a> 
    </div>
    <button class="menu-btn">Menu</button>
  </div>
{% endmacro %}
{#


#}
{% macro solution_header_nav(nav) %}
      <div class="nav-secondary">
        <ul class="unstyled-list nav-secondary-links">
          {% if nav.search -%}
          <li class="js-search-button-container">
            <button class="header-search-button js-search-button">Search</button>
          </li>
          {%- endif -%}
          {% for link in nav.links -%}
          <li>
            <a href="{{ link.href }}" class="{{ link.class }}{% if link.current %}current{% endif %}">
              {{ link.text }}
            </a>
          </li>
          {%- endfor %}
        </ul>
      </div>
{% endmacro %}
