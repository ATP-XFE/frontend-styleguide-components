{% macro solution_header(solution_header) %}
  <div class="usa-navbar solution-header">
    <div class="usa-logo" id="{{ solution_header.id_prefix }}logo">
      <em class="usa-logo-text">
        <a href="{{ solution_header.link.href | default('/') }}"
          title="{{ solution_header.link.title | default('Home') }}"
          aria-label="{{ solution_header.link.label | default('Home') }}">
          {{ solution_header.title | default(site.title) }}
        </a>
      </em>
    </div>
    <button class="usa-menu-btn">Menu</button>
  </div>
{% endmacro %}

