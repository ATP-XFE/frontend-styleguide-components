{%- macro header_simple(portal_header_data, solution_header_data, solution_nav, top_nav, top_nav_buttons) -%}
<header class="header header-extended" role="banner">
  {{ portal_header(portal_header_data) }}
  {{ solution_header(solution_header_data) }}
  <nav role="navigation" class="nav">
    <div class="nav-inner">
      <button class="nav-close"> x </button>
      {#{{ solution_header_nav(solution_nav) }}#}
      {{ mainnavigation(top_nav, top_nav_buttons) }} 
      {{ secondarynavigation() }} 
      {{ toolbox() }} 
    </div>
  </nav>
</header>
<div class="overlay"></div>
{%- endmacro -%}

