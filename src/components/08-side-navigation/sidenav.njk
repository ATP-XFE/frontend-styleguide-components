
{% macro nav_list(links, subclass) %}
  {% for item in links %}
  <li>
    <a href="{{ item.href }}"{% if item.active %} class="active" {% endif %}{% if item.current %} class="current" {% endif %}>
      {{ item.text }}
    </a>
    {% if item.current and item.links %}
    <ul class="{{ subclass }}">
      {{ nav_list(item.links, subclass) }}
    </ul>
    {% endif %}
    {% if item.active and item.links %}
    <ul class="{{ subclass }}">
      {{ nav_list(item.links, subclass) }}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
{% endmacro %}

<div class="container">
  <div class="row">
    <div class="col-12 sidebar-col">
      <nav>
        <ul class="sidenav-list">
          {{ nav_list(sidenav.links, 'sidenav-sub_list') }}
        </ul>
      </nav>
    </div>
  </div>
</div>