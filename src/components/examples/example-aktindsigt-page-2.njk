{% from "icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "12-modal/modal.njk" import modal as modal %}
{% from "overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "09-header/header-simple.njk" import portal_header as portal_header -%}
{%- from "09-header/header-simple.njk" import solution_header as solution_header -%}

{% from "07-form/controls/text-input.njk" import textinput as textinput %}

{% from "07-form/controls/radiobutton.njk" import radiobutton as radiobutton %}

{% block header %}
  <header class="header" role="banner">
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <nav role="navigation" class=" nav"> <!-- collapsible-->
      <button class="button button-secondary button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg("close")}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user"><b>Christian Emil Vestergaard Christiansen</b></p>
        <a href="#" class="button button-secondary button-signout">
          Log ud
        </a>
      </div>

      <div class="solution-info-mobile">
        <p><b>Erhvervsministeriet</b></p>
        <p><button class="button-unstyled button-contact" data-micromodal-trigger="modal-contact">Kontakt<svg class="icon-svg "><use xlink:href="#menu-right"></use></svg></button></p>
      </div>

    </nav> <!-- collapsible nav end-->
  </header>
  <div class="overlay"></div>
{% endblock %}

{% block body %}
  <section class="container">
    <div class="breadcrumb">
      <a href="#">Tilbage</a>
    </div>
    
    <div class="row page-container">
      <div class="col-12">
          {{overflowmenu("Trin 2 af 5","overflow_steps", true, false, "menu-down" ,"
              <ul class='sidenav-list'>
                  <li>
                      <a href='#'>
                          1. Trin 1
                          <span class='sidenav-icon'>
                              <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                          </span>
                      </a>
                  </li>
                  <li>
                      <a href='#' class='active'>
                          2. Trin 2
                      </a>
                  </li>
                  <li>
                      <a href='#' >
                          3. Trin 3 
                      </a>
                  </li>
                  <li>
                      <a href='#'>
                          4. Trin 4
                      </a>
                  </li>
                  <li>
                      <a href='#'>
                          5. Trin 5
                      </a>
                  </li>
              </ul>
              "
          ) }}
          <div class="content">
            <h1>Oplysninger om dig</h1>
            <form class="form">
                <fieldset>
                    {{textinput("id-fornavn", "Fornavn", "", "input-width-400", "", "Input til fornavn", "", false, "")}}
                    {{textinput("id-efternavn", "Efternavn", "", "input-width-400", "", "Input til efternavn", "", false, "")}}
                    {{textinput("id-gade-vej", "Gade/vej", "", "input-width-400", "", "Input til gade/vej", "", false, "")}}
                    {{textinput("id-husnummer", "Husnummer", "", "input-width-100", "", "Input til husnummer", "", false, "")}}
                    {{textinput("id-etage", "Etage", "(frivilligt)", "input-width-100", "", "Input til etage", "", false, "")}}
                    {{textinput("id-side", "Side", "(frivilligt)", "input-width-100", "", "Input til side", "", false, "Fx: TV, 2. dør")}}
                    {{textinput("id-postnummer", "Postnummer", "", "input-width-150", "", "Input til postnummer", "", false, "")}}
                    {{textinput("id-by", "By", "", "input-width-400", "", "Input til by", "", false, "")}}
                    {{textinput("id-co-adresse", "Evt. CO-adresse", "(frivilligt)", "input-width-400", "", "Input til CO-adresse", "", false, "")}}
                </fieldset>
                <fieldset>
                    {{radiobutton("id-aktindsigt-ja", "aktindsigt", "Ja", false, false, "Ja", "radio-large", false, "true")}}
                    {{radiobutton("id-aktindsigt-nej", "aktindsigt", "Ja", false, false, "Nej", "radio-large", false, "true")}}
                </fieldset>
        
          </form>
          <a href="#" class="button button-primary">Næste</a>
  </section>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  <footer>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 footer-col">
          <div class="align-left">
            <ul class="unstyled-list">
              <li><span class="h6 weight-semibold" title="Ansvarlig myndighed" aria-label="Ansvarlig myndighed">Undervisningsministeriet</span></li>
              <li><p>Styrelsen for IT og læring</p></li>
            </ul>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 footer-col">
          <div class="align-right">
            <ul class="unstyled-list">
              <li><a class="function-link" href="mailto:support@stil.dk">support@stil.dk</a></li>
              <li><a class="function-link" href="tel:004533925200">(+45) 33 92 52 00</a></li>
            </ul>
          </div>
