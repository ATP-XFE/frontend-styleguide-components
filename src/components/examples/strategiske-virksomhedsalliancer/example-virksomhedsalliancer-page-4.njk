{% from "icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "12-modal/modal.njk" import modal as modal %}
{% from "overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "09-header/header-simple.njk" import portal_header as portal_header -%}
{%- from "09-header/header-simple.njk" import solution_header as solution_header -%}
{% from "14-footers/footer-basic.njk" import footer_basic as footer_basic %}

{% from "07-form/controls/text-input.njk" import textinput as textinput %}
{% from "07-form/controls/radiobutton.njk" import radiobutton as radiobutton %}
{% from "07-form/controls/date-input.njk" import datoinput as datoinput %}


{% block header %}
  <header class="header" role="banner">
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <nav role="navigation" class=" nav"> <!-- collapsible-->
      <button class="button button-tertiary button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg("close")}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user"><b>Navn</b></p>
        {# <p class="mt-0">Københavns Urmager Værksted v/Martin Elsig</p> #}
        <a href="#" class="button button-secondary button-signout">
          Log ud
        </a>
      </div>

      <div class="solution-info-mobile">
        <p><b>Erhvervsministeriet</b></p>
        <p><button class="button-unstyled button-contact" data-micromodal-trigger="modal-contact">Kontakt<svg class="icon-svg "><use xlink:href="#menu-right"></use></svg></button></p>
      </div>
    </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}

{% block body %}
  <section class="container page-container">
    <div class="row">
      <div class="col-12">
          {{overflowmenu("Trin 4 af 4","overflow_steps", true, false, "menu-down" ,"
              <ul class='sidenav-list'>
                  <li>
                      <a href='/frontend-styleguide/pages/page-templates/digital-flytning/flytning-1'>
                          1. Stamdata
                          <span class='sidenav-icon'>
                              <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                          </span>
                      </a>
                  </li>
                  <li>
                      <a href='/frontend-styleguide/pages/page-templates/digital-flytning/flytning-2'>
                          2. SMV-kriterier
                          <span class='sidenav-icon'>
                              <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                          </span>
                      </a>
                  </li>
                  <li>
                      <a href='/frontend-styleguide/pages/page-templates/digital-flytning/flytning-3'>
                          3. Statsstøtte 
                          <span class='sidenav-icon'>
                              <svg class='icon-svg'><use xlink:href='#check'></use></svg>
                          </span>
                      </a>
                  </li>
                  <li>
                      <a href='/frontend-styleguide/pages/page-templates/digital-flytning/flytning-4' class='active'>
                          4. Tilskud til land
                      </a>
                  </li>
              </ul>
              ", true
          ) }}
          <div class="content">
            <h1>Tilskud til land</h1>
            <div class="mt-0">
                {{textinput("id-advisors", "Navn(-e) på rådgivere på ambassaden/generalkonsulatet", "", "input-width-xxl", "", "Input til navn(-e) på rådgivere på ambassaden/generalkonsulatet", "", false, false, "Navne skal skrives i samme rækkefølge, som landene er anført", "")}}
            </div>
            <div class="mt-6">
                {{textinput("id-companyalliance", "Navn på virksomhedsalliance", "", "input-width-xl", "", "Input til navn på virksomhedsalliance", "", false, "")}}
            </div>
            <h2 class="mt-6 mb-3">Bilag og bemærkninger</h2>
            <p class="font-article mt-3 mb-4">Ønsker du at vedhæfte bilag til ansøgningen (det er muligt at vedhæfte op til 3 bilag)?</p>
            <div class="mt-3">
                {{radiobutton("id-state-yes", "minimis", "Ja", false, false, "Ja", "radio-large js-collapse", false, true, "data-js-target='#collapse-radio' aria-controls='collapse-radio' aria-expanded='false'")}}
                 <div id="collapse-radio" aria-hidden="true" class="box-border-l collapsed">
                    <div class="py-4">
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                                <button href="example-aes-page-8" class="button button-secondary mt-0">Tilføj dokument</button>
                                <table class="table table--borderless table--compact table--responsive-headers mt-6">
                                    <thead>
                                    <tr>
                                        <th>Filnavn</th>
                                        <th class="table-text-right">Slet</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="mt-4 mt-lg-0">{{ icon_svg('file')}}vedhæftfil-1.pdf</td>
                                            <td class="table-text-right mt-4 mt-lg-0"><a href="#" class="function-link link-right">{{ icon_svg('delete-outline')}}</a></td>
                                        </tr>
                                        <tr>
                                            <td class="mt-4 mt-lg-0">{{ icon_svg('file')}}vedhæftfil-2.pdf</td>
                                            <td class="table-text-right mt-4 mt-lg-0"><a href="#" class="function-link link-right">{{ icon_svg('delete-outline')}}</a></td>
                                        </tr>
                                        <tr>
                                            <td class="mt-4 mt-lg-0">{{ icon_svg('file')}}vedhæftfil-3.pdf</td>
                                            <td class="table-text-right mt-4 mt-lg-0"><a href="#" class="function-link link-right">{{ icon_svg('delete-outline')}}</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>   
            </div>
            <div class="mt-3">
                {{radiobutton("id-state-no", "minimis", "Nej", false, false, "Nej", "radio-large", false, true)}}
            </div>

            <a href="#" class="button button-primary mt-7">Næste</a>
            <div class="breadcrumb">
                <a href="/frontend-styleguide/pages/page-templates/strategiske-virksomhedsalliancer/virksomhedsalliancer-3" class="button button-ghost">Tilbage</a>
            </div>

          </div>
      </div>
    </div>
  </section>
