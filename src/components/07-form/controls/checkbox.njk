{% macro checkbox(id, name, value, disabled, checked, text) %}
  <li>
    <input id="{{id}}" type="checkbox" name="{{name}}" value="{{value}}" {% if disabled %}disabled{% elif checked %}checked{% endif %}>
    <label for="{{id}}">{{text}}</label>
  </li>
{% endmacro %}

<h1>{{test}}</h1>
<fieldset class="usa-fieldset-inputs usa-sans">
  <ul class="usa-unstyled-list">
    {% for item in checkbox_example.items %}
      {{ checkbox(item.id, item.name, item.value, item.disabled, item.checked, item.text) }}
    {% endfor %}
  </ul>
</fieldset>